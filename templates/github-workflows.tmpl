name: "deploy of {{.Module}} module"

on:
  push:
    branches:
      - main

jobs:
  build-test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Code for Test
        uses: actions/checkout@v4
      
      - name: Build docker image
        run: docker build -t {{.Module}}:latest -f ./docker/Dockerfile .
  
      - name: run tests
        run: docker run --rm {{.Module}}:latest go test -v

  deploy:
    needs: build-test
    runs-on: ubuntu-latest
    steps:
      - name: 'Run Deploy'
        uses: appleboy/ssh-action@v1.2.2
        with:
          host: ${{"{{"}}secrets.SERVER_HOST{{"}}"}}
          username: ${{"{{"}}secrets.SERVER_USER{{"}}"}}
          key: ${{"{{"}}secrets.SERVER_SSH_KEY{{"}}"}}
          script: |
            cd /var/www/{{.Module}}
            git pull origin main
            docker build -t {{.Module}}:latest -f ./docker/Dockerfile .
            docker stop {{.Module}} || true
            docker rm {{.Module}} || true
            docker run -d --name {{.Module}}-app -p 80:80 {{.Module}}:latest
